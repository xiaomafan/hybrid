<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:xiaoma="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ixiaoma.modify.PagerSlidingTabStrip
        android:id="@+id/pts_head"
        android:background="#FFF"
        android:layout_width="match_parent"
        xiaoma:pstsDividerColor="#fff"
        xiaoma:pstsUnderlineColor ="#F2F2F1"
        xiaoma:pstsUnderlineHeight ="6dp"
        xiaoma:pstsIndicatorColor="#FF4545"
        xiaoma:pstsIndicatorHeight="8dp"
        xiaoma:pstsSelectedTabTextColor="#FF4545"
        android:layout_height="54dp" />
   <!-- <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#F2F2F1"/>-->

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF" />

</LinearLayout>
